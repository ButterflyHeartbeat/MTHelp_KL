<Window x:Class="MTHelp.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
        >

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="FirBtn" Content="{Binding FirBtnText}" FontSize="29" Style="{StaticResource ButtonPrimary}" Height="232" Margin="10" Width="360"></Button>
        <Button x:Name="SecBtn" Content="{Binding SecBtnText}" Background="LightBlue" Grid.Column="1" Height="232" Margin="10" Width="360"  FontSize="29"></Button>
    </Grid>

</Window>